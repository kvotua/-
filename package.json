{
  "eslintConfig": {
	"root": true,
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
      "prettier",
      "react"
    ],
	"extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
	],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "eslintIgnore": [
      "node_modules/",
      "build/",
      "packages/",
      "README.md",
      "*.env",
      "bot/",
      "backend/",
      ".git*",
      ".idea/",
      ".vscode/"
  ]
}